<view class="product">
 
  <swiper class="product-ad" indicator-dots="true" autoplay="true">
    <block wx:for="{{imgUrls}}" wx:key="index">
      <swiper-item>
         <image src="{{item}}"></image> 
      </swiper-item> 
    </block> 
  </swiper>

  <view class="product-list">
    <block wx:for="{{productList}}" wx:key="index">
      <view class="product-item">
         <text>{{item}}</text>
      </view> 
    </block> 
  </view>
</view>