<view class="product">
  <view class="title">产品</view>
  <view class="line"></view>
  
  <block wx:for="{{productList}}" wx:key="index">
    <view class="product-name">{{item.tag}}</view>
    <swiper circular="{{circular}}" next-margin="{{nextMargin}}">
      <block wx:for="{{item.detail}}" wx:key="index">
        <swiper-item>
          <view class="img-text">{{item.text}}</view>
          <image src="{{item.src}}" mode="aspectFill" data-link="{{item.link}}" bindtap="toLink"></image>
        </swiper-item> 
      </block>
    </swiper>
    <view class="line"></view>
  </block>

</view>